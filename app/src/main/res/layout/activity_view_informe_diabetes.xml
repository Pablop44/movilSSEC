<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InformeDiabetes.ViewInformeDiabetes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/relativeLayoutDiabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/numeroControles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Número de controles al día"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueNumeroControles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numeroControles"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/momentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/valueNumeroControles"
                android:text="Horario de los controles"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nivelBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/momentos"
                android:layout_marginBottom="5dp"
                android:text="Nivel bajo de azúcar en sangre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueNivelBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nivelBajo"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/frecuenciaBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueNivelBajo"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Frecuencia de nivel bajo de azúcar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueFrecuenciaBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frecuenciaBajo"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/horarioBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueFrecuenciaBajo"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Horario del nivel bajo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueHorarioBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horarioBajo"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/perdidaConocimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueHorarioBajo"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Pérdida de Conocimiento"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valuePerdidaConocimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perdidaConocimiento"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nivelAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valuePerdidaConocimiento"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Nivel alto de azúcar en sangre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueNivelAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nivelAlto"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/frecuenciaAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueNivelAlto"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="Frecuencia de nivel alto de azúcar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueFrecuenciaAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frecuenciaAlto"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/horarioAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueFrecuenciaAlto"
                android:layout_marginBottom="5dp"
                android:text="Horario del nivel alto"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueHorarioAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horarioAlto"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/actividadFisica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueHorarioAlto"
                android:layout_marginBottom="5dp"
                android:text="Actividad física"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueActividadFisica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actividadFisica"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/problemaDieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueActividadFisica"
                android:layout_marginBottom="5dp"
                android:text="Problema con la dieta diabética"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueProblemaDieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problemaDieta"
                android:layout_marginBottom="15dp"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/estadoGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valueProblemaDieta"
                android:layout_marginBottom="5dp"
                android:text="Estado General"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/valueEstadoGeneral"
                android:layout_width="323dp"
                android:layout_height="88dp"
                android:layout_below="@id/estadoGeneral"
                android:layout_marginBottom="10dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:text="Last Name"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>