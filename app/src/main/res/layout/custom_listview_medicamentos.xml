<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="17dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:id="@+id/nombreMedicamento"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:id="@+id/viaAdministracion"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/nombreMedicamento"
        android:layout_alignLeft="@+id/nombreMedicamento"
        android:layout_alignStart="@+id/nombreMedicamento"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/separator"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/nombreMedicamento"
        android:layout_toRightOf="@+id/viaAdministracion"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:id="@+id/marca"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/nombreMedicamento"
        android:layout_toRightOf="@+id/separator"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/dosis"
        android:layout_marginRight="8dp"
        android:textSize="17sp"
        android:layout_below="@+id/nombreMedicamento"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>